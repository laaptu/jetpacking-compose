<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:gravity="center_vertical|fill_horizontal">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/ds_horizontal_progress_bar_corner"/>
            <size android:height="@dimen/ds_horizontal_progress_bar_height"/>
            <solid android:color="@color/ds_progress_bar_background"/>
        </shape>
    </item>

    <item android:gravity="center_vertical|fill_horizontal">
        <scale android:scaleWidth="100%">
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/ds_horizontal_progress_bar_corner"/>
                <size android:height="@dimen/ds_horizontal_progress_bar_height"/>
                <solid android:color="?deputyTintSecondary"/>
            </shape>
        </scale>
    </item>
</layer-list>
