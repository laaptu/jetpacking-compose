<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--  Main background  -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="?deputyBackgroundPrimary" />
        </shape>
    </item>
    <!--  Divider  -->
    <item
        android:left="-2dp"
        android:right="-2dp"
        android:bottom="-2dp">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="1dp"
                android:color="?deputySeparatorPrimary" />
        </shape>
    </item>
</layer-list>